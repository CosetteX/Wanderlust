<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:paddingBottom="15dp"
    android:paddingLeft="12dp"
    android:paddingTop="15dp">

    <TextView
        android:id="@+id/item_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"/>

    <ImageView
        android:id="@+id/item_image"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/state_todo"/>

    <RelativeLayout
        android:id="@+id/item_title_filename_line"
        android:layout_toEndOf="@+id/item_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/item_priority_A"
            android:layout_centerInParent="true"
            android:layout_marginStart="20dp"
            android:layout_alignParentStart="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/microcircle_a"/>
        <ImageView
            android:id="@+id/item_priority_B"
            android:layout_centerInParent="true"
            android:layout_marginStart="20dp"
            android:layout_alignParentStart="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/microcircle_b"/>
        <ImageView
            android:id="@+id/item_priority_C"
            android:layout_centerInParent="true"
            android:layout_marginStart="20dp"
            android:layout_alignParentStart="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/microcircle_c"/>
        <ImageView
            android:id="@+id/item_priority_D"
            android:layout_centerInParent="true"
            android:layout_marginStart="20dp"
            android:layout_alignParentStart="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/microcircle_d"/>
        <ImageView
            android:id="@+id/item_priority_none"
            android:layout_centerInParent="true"
            android:layout_marginStart="20dp"
            android:layout_alignParentStart="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/microcircle_none"/>

        <TextView
            android:id="@+id/item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/item_priority_A"
            android:layout_marginLeft="15dp"
            android:text="text"
            android:textColor="@color/bar_gradient_light"
            android:textSize="14sp" />
        <TextView
            android:id="@+id/item_filename"
            android:text="filename"
            android:layout_marginEnd="12dp"
            android:layout_alignParentEnd="true"
            android:textColor="#808080"
            android:textSize="14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/item_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_alignStart="@id/item_title_filename_line"
        android:layout_below="@id/item_title_filename_line"
        android:layout_marginTop="4dp"
        android:textColor="@color/bar_gradient_dark"
        android:textSize="18sp"
        android:ellipsize="end"
        android:singleLine="true"
        tools:text="content" />

    <TextView
        android:id="@+id/item_deadline_date"
        android:layout_width="wrap_content"
        android:text="deadline"
        android:layout_marginEnd="10dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_height="wrap_content"/>

</RelativeLayout>
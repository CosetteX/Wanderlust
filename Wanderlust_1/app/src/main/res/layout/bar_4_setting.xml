<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bright_gray"
    android:orientation="vertical">


    <RelativeLayout
        android:id="@+id/Head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_marginTop="10dp"
        android:clickable="true"
        android:background="@drawable/corner_sel"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/usr_1"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:paddingLeft="20dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:src="@drawable/icon_head"/>
        <TextView
            android:id="@+id/name_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/usr_1"
            android:textSize="20dp"
            android:paddingTop="20dp"
            android:paddingLeft="15dp"
            android:textColor="#87a7d6"
            android:text="Bruce Wane"/>
        <TextView
            android:id="@+id/text_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/usr_1"
            android:layout_below="@id/name_1"
            android:paddingTop="5dp"
            android:paddingLeft="15dp"
            android:textSize="15dp"
            android:text="ID : 3180106666"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:paddingTop="30dp"
            android:paddingRight="10dp"
            android:textSize="20dp"
            android:text=">"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/report"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/Head"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_marginTop="80dp"
        android:clickable="true"
        android:background="@drawable/corner_sel"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/icon_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:src="@drawable/icon_report"/>
        <TextView
            android:id="@+id/text_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/icon_2"
            android:paddingTop="5dp"
            android:paddingLeft="15dp"
            android:textSize="15dp"
            android:text="Report"/>
        <TextView
            android:id="@+id/time_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:paddingTop="5dp"
            android:paddingRight="10dp"
            android:textSize="20dp"
            android:text=">"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/lock"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/report"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_marginTop="20dp"
        android:clickable="true"
        android:background="@drawable/corner_sel"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/icon_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:src="@drawable/icon_lock"/>
        <TextView
            android:id="@+id/text_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/icon_3"
            android:paddingTop="5dp"
            android:paddingLeft="10dp"
            android:textSize="15dp"
            android:text="Lock"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:paddingTop="5dp"
            android:paddingRight="10dp"
            android:textSize="20dp"
            android:text=">"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/color"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/lock"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_marginTop="20dp"
        android:clickable="true"
        android:background="@drawable/corner_sel"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/icon_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:src="@drawable/icon_color"/>
        <TextView
            android:id="@+id/text_4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/icon_4"
            android:paddingTop="5dp"
            android:paddingLeft="10dp"
            android:textSize="15dp"
            android:text="Color"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:paddingTop="5dp"
            android:paddingRight="10dp"
            android:textSize="20dp"
            android:text=">"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/about_us"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/color"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_marginTop="20dp"
        android:clickable="true"
        android:background="@drawable/corner_sel"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/icon_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:src="@drawable/icon_aboutus"/>
        <TextView
            android:id="@+id/text_5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/icon_5"
            android:paddingTop="5dp"
            android:paddingLeft="10dp"
            android:textSize="15dp"
            android:text="About us"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:paddingTop="5dp"
            android:paddingRight="10dp"
            android:textSize="20dp"
            android:text=">"/>
    </RelativeLayout>

</RelativeLayout>


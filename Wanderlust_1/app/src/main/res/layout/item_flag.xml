<?xml version="1.0" encoding="utf-8"?>

<com.example.wanderlust.Bar_1.Bar_1_Flag_Item
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:paddingBottom="1dp">

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:paddingBottom="15dp"
    android:paddingLeft="12dp"
    android:paddingTop="15dp">

    <TextView
        android:id="@+id/flag_item_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"/>

    <ImageView
        android:id="@+id/flag_item_image"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/icon_flag"/>

    <RelativeLayout
        android:id="@+id/flag_item_title_filename_line"
        android:layout_toEndOf="@+id/flag_item_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/flag_item_priority_A"
            android:layout_centerInParent="true"
            android:layout_marginStart="20dp"
            android:layout_alignParentStart="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/microcircle_d"/>
        <TextView
            android:id="@+id/flag_item_title"
            android:text="text"
            android:layout_alignLeft="@+id/flag_item_priority_A"
            android:layout_marginLeft="15dp"
            android:textColor="@color/bar_gradient_light"
            android:textSize="14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/flag_item_filename"
            android:text=" "
            android:layout_marginEnd="12dp"
            android:layout_alignParentEnd="true"
            android:textColor="#808080"
            android:textSize="14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/flag_item_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_alignStart="@id/flag_item_title_filename_line"
        android:layout_below="@id/flag_item_title_filename_line"
        android:layout_marginTop="4dp"
        android:textColor="@color/bar_gradient_dark"
        android:textSize="18sp"
        android:ellipsize="end"
        android:singleLine="true"
        tools:text="content" />

    <TextView
        android:id="@+id/flag_item_deadline_date"
        android:layout_width="wrap_content"
        android:text=" "
        android:layout_marginEnd="10dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_height="wrap_content"/>

</RelativeLayout>

    <!-- 以下都是侧滑菜单的内容依序排列 -->
    <Button
        android:id="@+id/flag_item_top"
        android:layout_width="60dp"
        android:layout_height="match_parent"
        android:background="#d9dee4"
        android:text="置顶"
        android:textColor="@android:color/white"/>

    <Button
        android:id="@+id/flag_item_delete"
        android:layout_width="60dp"
        android:layout_height="match_parent"
        android:background="#ff0000"
        android:text="删除"
        android:textColor="@android:color/white"/>

</com.example.wanderlust.Bar_1.Bar_1_Flag_Item>

